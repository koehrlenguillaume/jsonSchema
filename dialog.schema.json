{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/koehrlenguillaume/jsonSchema/master/dialog.schema.json",
  "title": "Dialog",
  "description": "object containing all dialog activities",
  "type": "object",
  "properties": {
    "activities": {
      "description": "Default activities",
      "type": "array",
      "items": {
        "$ref": "https://raw.githubusercontent.com/koehrlenguillaume/jsonSchema/master/activity.schema.json"
      },
      "minItems": 1
    },
    "channelsActivities": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "IsReplacingAll": {
            "type": "boolean"
          },
          "replacingActivities": {
            "description": "Replacing default activities",
            "type": "array",
            "items": {
              "$ref": "https://raw.githubusercontent.com/koehrlenguillaume/jsonSchema/master/activity.schema.json"
            }
          },
          "alternateActivities": {
            "additionalProperties": {
              "type": "object",
              "$ref": "https://raw.githubusercontent.com/koehrlenguillaume/jsonSchema/master/activity.schema.json"
            }
          }
        },
        "required": ["IsReplacingAll"]
      }
    }
  },
  "required": ["activities"]
}
