          "description": "Alternate activities for slack channel",
          "type": "object",
          "$ref": "https://tdustorage.blob.core.windows.net/schema/channelsActivities.schema.json"
        },
        "groupme": {
          "description": "Alternate activities for groupme channel",
          "type": "object",
