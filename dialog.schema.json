          "description": "Alternate activities for facebook channel",
          "type": "object",
          "$ref": "https://tdustorage.blob.core.windows.net/schema/channelsActivities.schema.json"
        },
        "skype": {
          "description": "Alternate activities for skype channel",
          "type": "object",
