{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/koehrlenguillaume/jsonSchema/master/dialog.schema.json",
  "title": "Dialog",
  "description": "object containing all dialog activities",
  "type": "object",
  "properties": {
    "activities": {
      "description": "Default activities",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "delay": {
            "type": "number",
            "minimum": 0
          },
          "typing": {
            "type": "boolean"
          },
          "type": {
            "type": "string",
            "enum": ["display", "prompt", "redirect"]
          }
        },
        "required": ["delay", "typing", "type"]
      },
      "minItems": 1
    },
    "channelsActivities": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "IsReplacingAll": {
            "type": "boolean"
          }
        },
        "required": ["IsReplacingAll"]
      }
    }
  },
  "required": ["activities"]
}
