        },
        "cortana": {
          "description": "Alternate activities for cortana channel",
          "type": "object",
          "$ref": "https://tdustorage.blob.core.windows.net/schema/channelsActivities.schema.json"
        }
      },
      "additionalProperties": {
        "type": "object",
        "$ref": "https://tdustorage.blob.core.windows.net/schema/channelsActivities.schema.json"
      }
